<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/padding_large"
    android:layout_marginVertical="@dimen/margin_micro4"
    android:orientation="vertical">


    <!--<FrameLayout
        android:id="@+id/flBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBlockList"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_small4"
            android:layout_marginStart="@dimen/margin_xxxlarge"
            android:layout_height="wrap_content"
            android:background="@drawable/drw_outgoing_background"
            tools:listitem="@layout/r_text_block" />

    <!--</FrameLayout>-->

    <include
        android:id="@+id/incDateTextView"
        layout="@layout/v_message_date_text_view" />

    <com.rapidops.salesmatechatsdk.app.view.AppTextView
        android:id="@+id/txtFailStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_small"
        android:paddingHorizontal="@dimen/padding_small"
        android:layout_marginEnd="-8dp"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/font_size_micro1"
        android:text="@string/lbl_failed_retry"
        app:textColorStyle="actionColor"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>