<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/padding_large"
    android:layout_marginVertical="@dimen/margin_micro4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xxxlarge"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_micro3"
            android:layout_marginEnd="@dimen/margin_micro5"
            app:srcCompat="@drawable/ic_info"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBlockList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small4"
            android:background="@drawable/drw_outgoing_background"
            tools:listitem="@layout/r_text_block" />

    </LinearLayout>

    <include
        android:id="@+id/incDateTextView"
        layout="@layout/v_message_date_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtFailStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/font_size_micro1"
        android:textColor="@color/error_color"
        android:text="@string/lbl_failed"
        tools:visibility="visible" />

</LinearLayout>