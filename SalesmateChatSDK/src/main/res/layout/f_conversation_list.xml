<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/default_background_color">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:alpha="0.08"
        app:srcCompat="@drawable/pattern_7" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_statusbar"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            tools:layout_height="56dp"
            android:layout_height="?attr/actionBarSize">

            <com.rapidops.salesmatechatsdk.app.view.AppTextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textColorStyle="backgroundForegroundColor"
                android:textSize="@dimen/font_size_medium"
                style="@style/TextMedium"
                tools:textColor="@color/white"
                android:text="@string/lbl_your_conversation" />

        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drw_corner_top_background_white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConversation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingBottom="90dp"
                android:clipToPadding="false"
                tools:listitem="@layout/r_conversation_item" />

            <com.rapidops.salesmatechatsdk.app.view.AppTextView
                android:id="@+id/txtStartNewChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_send"
                android:background="@drawable/drw_corner_background"
                android:paddingHorizontal="@dimen/padding_xxlarge"
                android:paddingVertical="@dimen/padding_small3"
                android:textColor="@color/white"
                style="@style/TextMedium"
                android:layout_marginBottom="@dimen/margin_xxlarge"
                app:textColorStyle="actionForegroundColor"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:drawablePadding="@dimen/padding_small2"
                android:textSize="@dimen/font_size_medium"
                android:text="@string/lbl_start_new_chat" />


        </RelativeLayout>

    </LinearLayout>
</FrameLayout>