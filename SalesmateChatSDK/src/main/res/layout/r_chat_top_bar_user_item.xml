<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/margin_small3"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foreground="@drawable/drw_circle_ring">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:tint="@color/default_background_color"
            tools:src="@drawable/drw_circle_background" />

        <com.rapidops.salesmatechatsdk.app.view.AppTextView
            android:id="@+id/txtCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drw_circle_count_background"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_size_small"
            tools:text="+3" />

    </FrameLayout>

    <com.rapidops.salesmatechatsdk.app.view.AppTextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textColorStyle="backgroundForegroundColor"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_micro4"
        tools:text="Samual"
        android:textSize="@dimen/font_size_micro3" />
</LinearLayout>