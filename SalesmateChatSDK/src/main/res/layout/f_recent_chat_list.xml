<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/default_background_color">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:alpha="0.08"
        app:srcCompat="@drawable/pattern_7" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/margin_xxlarge"
                android:layout_marginVertical="@dimen/margin_xlarge">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:maxHeight="40dp"
                    tools:layout_width="100dp"
                    tools:layout_height="40dp"
                    tools:src="@drawable/ic_logo_img"
                    android:layout_marginBottom="@dimen/margin_xxxxlarge" />

                <com.rapidops.salesmatechatsdk.app.view.AppTextView
                    android:id="@+id/txtGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Hello There"
                    tools:textColor="@color/white"
                    app:textColorStyle="backgroundForegroundColor"
                    android:textSize="@dimen/font_size_xlarge" />

                <com.rapidops.salesmatechatsdk.app.view.AppTextView
                    android:id="@+id/txtTeamIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    app:textColorStyle="backgroundSecondaryForegroundColor"
                    tools:text="Hello There"
                    tools:textColor="@color/white" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drw_corner_top_background_white">

            <include
                layout="@layout/v_lets_chat_view"
                android:id="@+id/incLetsChat" />

            <include
                layout="@layout/v_recent_chat_view"
                android:id="@+id/incRecentChat" />

            <FrameLayout
                android:id="@+id/flProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/llPoweredBy"
                android:visibility="gone"
                tools:visibility="visible">


                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="?attr/colorPrimary"
                    android:indeterminateTintMode="src_atop" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/llPoweredBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_xlarge"
                android:gravity="center">

                <com.rapidops.salesmatechatsdk.app.view.AppTextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_powered_by"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_micro3"
                    android:text="@string/lbl_made_with" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_heart"
                    android:layout_marginHorizontal="@dimen/margin_micro4" />

                <com.rapidops.salesmatechatsdk.app.view.AppTextView
                    android:id="@+id/txtPoweredBy"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_size_micro3"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_powered_by"
                    android:text="@string/lbl_by_salesmate" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>