<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:paddingHorizontal="@dimen/padding_large"
    android:layout_marginVertical="@dimen/margin_micro4"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/flBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small4"
        android:layout_marginStart="@dimen/margin_xxxlarge"
        android:background="@drawable/drw_outgoing_background">

        <include
            android:id="@+id/incPlainTextView"
            layout="@layout/v_plain_text_view" />

    </FrameLayout>

    <include
        android:id="@+id/incDateTextView"
        layout="@layout/v_message_date_text_view" />

</LinearLayout>